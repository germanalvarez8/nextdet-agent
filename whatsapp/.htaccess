# Configuración de Apache para el servicio de WhatsApp

# Habilitar el motor de reescritura
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirigir HTTP a HTTPS (descomenta en producción)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Proteger el archivo .env
    RewriteRule ^\.env$ - [F,L]
</IfModule>

# Proteger archivos sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Denegar acceso al archivo .env
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

# Denegar acceso a archivos de respaldo
<FilesMatch "\.(bak|backup|log|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Configurar tipos MIME
<IfModule mod_mime.c>
    AddType application/json .json
</IfModule>

# Habilitar compresión (opcional)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/json
</IfModule>

# Configurar CORS (ajusta según tus necesidades)
<IfModule mod_headers.c>
    # Permitir acceso desde cualquier origen (ajusta en producción)
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>

# Configuración de PHP (opcional)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 30
    php_value max_input_time 30
</IfModule>

# Página de error personalizada (opcional)
# ErrorDocument 404 /404.html
# ErrorDocument 500 /500.html
